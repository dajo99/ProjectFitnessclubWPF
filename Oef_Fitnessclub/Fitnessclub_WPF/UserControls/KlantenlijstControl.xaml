<UserControl x:Class="Fitnessclub_WPF.UserControls.KlantenlijstControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Fitnessclub_WPF.UserControls"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" xmlns:components="clr-namespace:Fitnessclub_WPF.Components"
             TextElement.Foreground="{DynamicResource MaterialDesignBody}"
             TextElement.FontWeight="Regular"
             TextElement.FontSize="13"
             TextOptions.TextFormattingMode="Ideal"
             TextOptions.TextRenderingMode="Auto"
             FontFamily="{DynamicResource MaterialDesignFont}"
             mc:Ignorable="d" 
             d:DesignHeight="540" d:DesignWidth="1080">
    <UserControl.Resources>
        <Style x:Key="CenterGridHeaderStyle" TargetType="DataGridColumnHeader">
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
        </Style>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="4*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Label Content="Administrator" Grid.Column="0" Grid.Row="0" Margin="20" FontSize="40" FontWeight="Bold" HorizontalAlignment="Left"/>
        <Label Content="Klantenlijst" Grid.ColumnSpan="2" Margin="20" FontSize="40" HorizontalAlignment="Center"/>

        <DataGrid  Grid.Row="1" Grid.ColumnSpan="2" ItemsSource="{Binding Klanten}" Margin="80 10 80 0" SelectedItem="{Binding GeselecteerdeKlant}" AutoGenerateColumns="False" BorderThickness="4" BorderBrush="{DynamicResource PrimaryHueDarkBrush}" >
            <DataGrid.Columns>
                <DataGridTextColumn Width="2*"                       
                    Header="Voornaam" Binding="{Binding Voornaam}" HeaderStyle="{StaticResource CenterGridHeaderStyle}" >
                </DataGridTextColumn>
                <DataGridTextColumn Width="2*"  
                    Header="Achternaam" Binding="{Binding Achternaam}" HeaderStyle="{StaticResource CenterGridHeaderStyle}" >
                </DataGridTextColumn>
                <DataGridTextColumn Width="3*"                       
                    Header="Email" Binding="{Binding Email}" HeaderStyle="{StaticResource CenterGridHeaderStyle}">
                </DataGridTextColumn>
                <DataGridTextColumn Width="2*"  
                    Header="Adres" Binding="{Binding Adres}" HeaderStyle="{StaticResource CenterGridHeaderStyle}" >
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="HorizontalAlignment" Value="Center" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Width="*"  
                    Header="Gemeente" Binding="{Binding Gemeente}" HeaderStyle="{StaticResource CenterGridHeaderStyle}">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="HorizontalAlignment" Value="Center" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Width="*"  
                    Header="Postcode" Binding="{Binding Postcode}" HeaderStyle="{StaticResource CenterGridHeaderStyle}">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="HorizontalAlignment" Value="Center" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Width="*"  
                    Header="Land" Binding="{Binding Land}" HeaderStyle="{StaticResource CenterGridHeaderStyle}">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="HorizontalAlignment" Value="Center" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Orientation="Horizontal" Grid.ColumnSpan="2" Grid.Row="2">
            <Button Command="{Binding}" CommandParameter="Terug"  Margin="100 0 50 0"   materialDesign:ButtonAssist.CornerRadius="5" Style="{StaticResource MaterialDesignRaisedAccentButton}" Width="200" Height="40">Terug</Button>
            <Button Command="{Binding}" CommandParameter="Verwijderen"  Margin="90 0 70  0"   materialDesign:ButtonAssist.CornerRadius="5" Style="{StaticResource MaterialDesignRaisedAccentButton}" Background="Red" Width="200" Height="40">Verwijderen</Button>
            <Button Command="{Binding}" CommandParameter="Opslaan"  Margin="70 0 0 0"    materialDesign:ButtonAssist.CornerRadius="5" Style="{StaticResource MaterialDesignRaisedAccentButton}" Width="200" Height="40">Opslaan</Button>
        </StackPanel>

        




    </Grid>
</UserControl>
